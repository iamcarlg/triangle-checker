<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Triangle finder</title>

    <!-- Main CSS -->
    <link rel="stylesheet" href="../css/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Angular JS Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>

</head>

<body>
    
    <div class = "container">
        <div>
            <h1><center>Triangle Finder</center></h1>

            <% if(user){ %>

                <h1 style = "position: absolute; top : 640; left : 5; height : 5vh; margin: 10px auto;"><center><%= user.username %></center></h1>

            <%}else{ %>
                
                <h1>Undefined</h1>
                
                <% } %>

                <a href = "/auth/logout"><button type = "submit" style = "position: absolute; right : 5; height : 7vh; margin: 5px auto;">Log Out</button></a>
        </div>
        <div class = "canvas">

            <center>

                <!-- <img src="../images/isosceles.jpg" width = "250" height = "100" alt=""> -->
                <img style = "display:none;"class = "triangle_img" src="" width = "320" height = "220" width = "300" height = "200" lt="">
                <!-- <img src="../images/scalene.png" width = "250" height = "100" alt=""> -->

            </center>

        </div>

        <!-- Result -->

        
        <div class = "form-container">

            <div id = "result-checking">
                
            </div>

            <form action="#" methop = "post">
                <div class="mb-3">
                    <!-- <label for="a" class="form-label">Enter the 1st size of the triangle</label> -->
                    <input type="number" class="form-control a-input" id="a" placeholder="enter a 1st side ..." required>
                </div>
                <div class="mb-3">
                    <!-- <label for="b" class="form-label">Enter the 2nd size of the triangle</label> -->
                    <input type="number" class="form-control b-input" id="b" placeholder="enter 2nd side ..." required>
                </div>
    
                <div class="mb-3">
                    <!-- <label for="c" class="form-label">Enter the 3rd size of the triangle</label> -->
                    <input type="number" class="form-control c-input" id="c" placeholder="enter 3rd side ..." required>
                </div>
        
                <div class="mb-3" style = "display: flex;">
                    <button type="submit" class="form-control" class="btn" onclick="triangle_checking();">Submit</button>
                    <button type="submit" class="form-control" class="btn_clear" onclick="clear_input();">Clear</button>
                
                </div>
            </form>
        </div>

    </div>
</body>

<style>
    *{
        top : 0;
        bottom: 0;
        box-sizing: border-box;
    }

    body{
        background-color:aqua;

    }

    .container{
        width : 100%;
        height : 100vh;

    }

    .canvas{
        width : 80%;
        height : 250px;
        background-color: #fff;

        border: 2px solid black;
        border-radius: 5px;

        margin: 10px auto;
        padding : 15px;

        /* clip-path: polygon(49% 0, 0% 100%, 100% 100%); */
    }

    #result-checking{
        font-size: 1.5rem;
        font-weight: bolder;


    }
    .form-container{
        width : 50%;
        margin-right : auto;
        margin-left : auto;
    }


</style>

<script>

    // Function to check if the triangle is isosceles, equilateral or scalene
    function triangle_checking(){
        var x = document.querySelector('.a-input').value;
        var y = document.querySelector('.b-input').value;
        var z = document.querySelector('.c-input').value;
        var triangle_img = document.querySelector('.triangle_img');
        var result_checking = document.getElementById('result-checking');


        if(x === y && y === z && z === x){
                // alert("Equilateral");
                result_checking.innerHTML = "This triangle is equilateral";
                result_checking.style.color = "blue";
    
                triangle_img.style.display = "inline";
                triangle_img.setAttribute('src', '../images/equilateral.png');
    
    
            }else if(x === y || y === z || x === z){
                // alert("Isosceles");
                result_checking.innerHTML = "This triangle is isoscele";
                result_checking.style.color = "green";
    
                triangle_img.style.display = "inline";
                triangle_img.setAttribute('src', '../images/isosceles.jpg');
    
            }else{
                // alert("Scalene");
    
                result_checking.style.color = "red";
                result_checking.innerHTML = "This triangle is scalene";
    
                triangle_img.style.display = "inline";
                triangle_img.setAttribute('src', '../images/scalene.png');
    
            }

        
    };

    // Function to reload the window
    function clear_input(){
        document.location.reload(true);
    }

</script>

</html>